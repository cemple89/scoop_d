<!DOCTYPE html>
<html>
  <head>
    <title>ScoopD</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div id="wrapper">
      <link href="http://cdnjs.cloudflare.com/ajax/libs/foundicons/3.0.0/foundation-icons.css" rel="stylesheet">
      <nav class="menu">
        <h1 class="name"><i class="fi-widget"></i> Rescue Mission</a></h1>
        <ul class="inline-list hide-for-small-only account-action">
          <% if current_user %>
            <li>Signed in as <%= current_user.username %></a></li>
            <li> <%= button_to "Sign Out", signout_path, method: :delete  %> </li>
          <% else %>
            <li><a href="/auth/github" class="is-active">Sign In</a></li>
          <% end %>
        </ul>
        <a class="account hide-for-medium-up" href="#" data-reveal-id="myModal"><i class="fi-unlock"></i></a>
      </nav>
    </div>
    <%= yield %>
  </body>
</html>
