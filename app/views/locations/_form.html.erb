<div class="no-top-padding">
<%= form_for(@location) do |q| %>
  <div class="field">
    <%= q.label :name, "Name" %><br>
    <%= q.text_field :name %>
  </div>
  <div class="field">
    <%= q.label :address, "Address" %><br>
    <%= q.text_field :address %>
  </div>
  <div class="field">
    <%= q.label :city, "City" %><br>
    <%= q.text_field :city %>
  </div>
  <div class="field">
    <%= q.label :state, "State" %><br>
    <%= q.text_field :state %>
  </div>
  <div class="field">
    <%= q.label :zip_code, "Zip Code" %><br>
    <%= q.text_field :zip_code %>
  </div>
  <div class="row">
    <%= q.label :neighborhood, "Neighborhood" %><br>
    <%= q.select :neighborhood, options_for_select(@neighborhood_collection) %>
  </div>
  <div class="field">
    <%= q.label :phone_number %><br>
    <%= q.text_field :phone_number%>
  </div>
  <div class="actions">
    <%= q.submit "Add Location", class:"search-button", style:"width: 300px;"%>
  </div>
<% end %>
</div>
