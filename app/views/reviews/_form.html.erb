<div class="new_user new_review">
<%= form_for [@location, @review] do |q| %>
  <div class="row nav-box top-padded">
    <%= q.label :flavor, "Flavor" %><br>
    <%= q.text_field :flavor, class:"search-form"%>
  </div>
  <div class="row nav-box top-padded">
    <%= q.label :quantity, "Rating" %><br>
    <%= q.collection_radio_buttons :rating, @rating_collection, :first, :last %>
  </div>
  <div class="row nav-box top-padded">
    <%= q.label :body, "Extra Scoop" %><br>
    <%= q.text_area :body, class:"search-form", style:"width: 300px; height: 200px;" %>
  </div>
  <div class="actions top-padded">
    <%= q.submit "Add Review", class:"search-button", style:"width: 300px;" %>
  </div>
<% end %>
</div>
